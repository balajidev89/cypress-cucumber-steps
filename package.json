{
  "name": "cypress-cucumber-steps",
  "version": "1.8.0",
  "description": "Cypress Cucumber step definitions",
  "author": "Mark <mark@remarkablemark.org>",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --target es5",
    "clean": "rm -rf docs lib",
    "cypress:open": "cypress open",
    "docs": "typedoc",
    "docs:watch": "npm run docs -- --watch",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable && npm run lint && npm run lint:tsc && npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkablemark/cypress-cucumber-steps"
  },
  "bugs": {
    "url": "https://github.com/remarkablemark/cypress-cucumber-steps/issues"
  },
  "keywords": [
    "cypress-cucumber-steps",
    "cypress",
    "cucumber",
    "steps",
    "step-definitions",
    "gherkin",
    "ui",
    "automation",
    "bdd",
    "test"
  ],
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "15.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "2.1.5",
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@types/node": "18.11.14",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "cypress": "12.1.0",
    "eslint": "8.29.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "pinst": "3.0.0",
    "prettier": "2.8.1",
    "typedoc": "0.23.22",
    "typescript": "4.9.4"
  },
  "peerDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "*",
    "cypress": "*"
  },
  "files": [
    "lib/"
  ],
  "license": "MIT"
}
